<?xml version="1.0" encoding="utf-8"?>

<!--
    post header on reader comment activity
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_blog_section"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:selectableItemBackground"
    android:orientation="vertical"
    android:paddingStart="@dimen/margin_extra_large"
    android:paddingTop="@dimen/margin_medium"
    android:paddingBottom="@dimen/margin_large"
    android:paddingEnd="@dimen/margin_medium_large">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/reply_to_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceOverline"
        tools:text="REPLY TO PAMELA NGUEYEN" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/post_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="@dimen/material_emphasis_high_type"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        tools:text="The best moment of any trip, for me, is when I finally getting back home." />


</LinearLayout>
